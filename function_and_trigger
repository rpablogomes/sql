CREATE FUNCTION trigger_set_timestamp() // CREATES A FUNCTION TO A NEW UPDATED_AT
RETURNS TRIGGER AS $$
BEGIN
	NEW.updated_at = NOW();
  RETURN NEW;
END;
$$ LANGUAGE plpgsql;

CREATE TRIGGER set_timestamp // CREATE A TRIGGER FOR AN UPDATE
BEFORE UPDATE ON products
FOR EACH ROW
EXECUTE PROCEDURE trigger_set_timestamp();
